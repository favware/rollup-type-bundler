{
  "name": "@favware/rollup-type-bundler",
  "version": "2.0.0",
  "description": "A small CLI tool to bundle types with rollup",
  "author": "@favware",
  "license": "MIT",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "rollup-type-bundler": "./dist/cli.js",
    "rtb": "./dist/cli.js"
  },
  "imports": {
    "#commands/*": "./dist/commands/*.js",
    "#lib/*": "./dist/lib/*.js",
    "#root/*": "./dist/*.js"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/*.tsbuildinfo",
    "!dist/**/*.js.map",
    "!dist/**/*.d.ts",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "lint": "eslint src --ext ts --fix",
    "debug": "node . -v --dist ./dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "update": "yarn upgrade-interactive --latest",
    "clean": "node scripts/clean.mjs",
    "build": "tsc -b src",
    "watch": "tsc -b src -w",
    "bump": "cliff-jumper",
    "check-update": "cliff-jumper --dry-run",
    "postinstall": "husky install .github/husky",
    "prepack": "yarn build && pinst --disable",
    "postpack": "pinst --enable"
  },
  "dependencies": {
    "@sapphire/utilities": "^3.12.0",
    "colorette": "^2.0.20",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0",
    "rollup": "^3.26.0",
    "rollup-plugin-dts": "^5.3.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@favware/cliff-jumper": "^2.1.1",
    "@sapphire/eslint-config": "^4.4.2",
    "@sapphire/prettier-config": "^1.4.5",
    "@sapphire/ts-config": "^4.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.16.19",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "pinst": "^3.0.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "acorn": "^8.9.0",
    "ansi-regex": "^5.0.1",
    "minimist": "^1.2.8"
  },
  "engines": {
    "node": ">=v14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/rollup-type-bundler.git"
  },
  "bugs": {
    "url": "https://github.com/favware/rollup-type-bundler/issues"
  },
  "homepage": "https://github.com/favware/rollup-type-bundler",
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn",
    "rollup",
    "types",
    "bundler",
    "CLI",
    "utility"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "@sapphire"
  },
  "packageManager": "yarn@3.6.1"
}
